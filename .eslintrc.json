{
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "flowtype",
        "compat"
    ],
    "rules": {
        "indent": ["error", 4],
        "compat/compat": 2
    },
    "env": {
        "browser": true,
        "jest": true
    },
    "settings": {
        "polyfills": ["fetch"]
    }
}
